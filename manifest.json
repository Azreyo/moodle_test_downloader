{
  "manifest_version": 3,
  "name": "MTD",
  "version": "1.1",
  "author": "Azreyo",
  "description": "Downloader for Moodle test before teacher hides them",

  "icons": {
    "48": "icons/logo.svg"
  },

  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "downloads"
  ],

  "action": {
    "default_icon": "icons/logo.svg",
    "default_title": "MTD",
    "default_popup": "popup/menu.html"
  },

  "background": {
    "service_worker": "src/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/mtd.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["styles/stylizer.css"],
      "matches": ["<all_urls>"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "mtd@moodle-test-downloader",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
